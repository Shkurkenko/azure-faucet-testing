doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src="https://kit.fontawesome.com/f009f0b241.js" crossorigin="anonymous")
  body
    block content
    header
      .logo 
      menu
        ul 
          li.menu_item  
            a(href="/" class="menu_item_a")
              i(class="fas fa-home")
          li.menu_item
            a(href="/aboutUs" class="menu_item_a") aboutUs     
    main
      section.loot_crypto 
        form(method="post" action="/submit_form" class="send_data_form" id="main_form")
